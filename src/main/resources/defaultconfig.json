{
	"on-start": {
		"action": "say-text",
		"text": "Starting VoicePi"
	},
	"on-exit": {
		"action": "say-text",
		"text": "Stopping VoicePi"
	},
	"on-activation": {
		"action": "play-sound",
		"soundfile": "sounds/activated.wav"
	},
	"on-command-spoken": {
		"action": "play-sound",
		"soundfile": "sounds/ok.wav"
	},
	"on-reload": {
		"action": "none"
	},
	"on-wrong-command": {
		"action": "play-sound",
		"soundfile": "sounds/error.wav"
	},
	"on-timeout": {
		"action": "play-sound",
		"soundfile": "sounds/timeout.wav"
	},
	"timeout": 30,
	"activation-commands": [
		"RASPBERRY"
	],
	"tts": {
		"class-name": "de.piegames.voicepi.tts.FreeSpeechEngine"
	},
	"stt": {
		"class-name": "de.piegames.voicepi.stt.SphinxRecognizer",
		"corpus-history-size": 10
	},
	"active-modules": [
		"shell",
		"application-control"
	],
	"modules": {
		"shell": {
			"class-name": "de.piegames.voicepi.module.ActionModule",
			"commands": {
				"TEST": {
					"action": "run-command",
					"command": "echo Hello world",
					"stdout-to-tts": "true"
				}
			}
		},
		"application-control": {
			"class-name": "de.piegames.voicepi.module.ApplicationModule",
			"exit-commands": [
				"EXIT"
			],
			"reload-commands": [
				"RELOAD"
			]
		}
	}
}