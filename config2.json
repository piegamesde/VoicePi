{
	"on-start": {
		"action": "say-text",
		"text": "Starting VoicePi"
	},
	"on-exit": {
		"action": "say-text",
		"text": "Stopping VoicePi"
	},
	"on-activation": {
		"action": "say-text",
		"text": "Yes, sir"
	},
	"on-timeout": {
		"action": "play-sound",
		"soundfile": "sounds/timeout.wav"
	},
	"on-reload": {
		"action": "say-text",
		"text": "Reloading"
	},
	"timeout": 30,
	"on-wrong-command": {
		"action": "play-sound",
		"soundfile": "sounds/error.wav"
	},
	"activation-commands": [
		"RASPBERRY"
	],
	"tts": {
		"_class-name": "de.piegames.voicepi.tts.FreeSpeechEngine",
		"class-name": "de.piegames.voicepi.tts.CommandSpeechEngine",
		"command": "espeak --stdin --stdout"
	},
	"stt": {
		"class-name": "de.piegames.voicepi.stt.SphinxRecognizer",
		"corpus-history-size": 10
	},
	"active-modules": [
		"pi-control",
		"shell",
		"application-control",
		"mocp"
	],
	"modules": {
		"shell": {
			"class-name": "de.piegames.voicepi.module.ActionModule",
			"commands": {
				"TEST": {
					"action": "run-command",
					"command": "echo Hello world",
					"stdout-to-tts": "true"
				}
			}
		},
		"pi-control": {
			"class-name": "de.piegames.voicepi.module.ActionModule",
			"commands": {
				"CHECK INTERNET": {
					"action": "run-command",
					"command": "bash scripts/check_internet.sh",
					"stdout-to-tts": "true"
				},
				"WHERE ARE YOU": {
					"action": "run-command",
					"say-before-executing": "You are at",
					"command": "bash scripts/tell_ip.sh",
					"stdout-to-tts": "true"
				},
				"YOU IP": {
					"action": "run-command",
					"say-before-executing": "Your I_P's are:",
					"command": "bash scripts/tell_ip.sh",
					"stdout-to-tts": "true"
				},
				"SHUT DOWN": {
					"action": "run-command",
					"say-before-executing": "Goodbye",
					"command": "shutdown now",
					"await-termination": "true"
				},
				"RESTART": {
					"action": "run-command",
					"say-before-executing": "See you later",
					"command": "reboot",
					"await-termination": "true"
				}
			}
		},
		"mocp": {
			"class-name": "de.piegames.voicepi.module.ActionModule",
			"commands": {
				"PLAY MUSIC": {
					"action": "run-command",
					"command": [
						"/bin/bash",
						"-c",
						"mocp -S;mocp -p"
					]
				},
				"STOP MUSIC": {
					"action": "run-command",
					"command": "mocp -x",
					"stdout-to-tts": "true"
				},
				"PAUSE MUSIC": {
					"action": "run-command",
					"command": "mocp -P",
					"stdout-to-tts": "true"
				},
				"SONG INFO": {
					"action": "run-command",
					"command": "mocp -Q \"%title from %album by %artist\"",
					"stdout-to-tts": "true"
				},
				"PLAYLIST": {
					"action": "say-text",
					"text": "Select playlist",
					"next-state": "playlist"
				}
			},
			"commands-playlist": {
				"FAVOURITES": {
					"action": "run-command",
					"say-before-executing": "Adding to favourite",
					"command": [
						"/bin/bash",
						"-c",
						"mocp -Q %title >> favourites.txt"
					]
				},
				"DELETE": {
					"action": "run-command",
					"say-before-executing": "Delete this song",
					"command": [
						"/bin/bash",
						"-c",
						"mocp -Q %title >> delete.txt"
					]
				}
			}
		},
		"application-control": {
			"class-name": "de.piegames.voicepi.module.ApplicationModule",
			"exit-commands": [
				"EXIT"
			],
			"reload-commands": [
				"RELOAD"
			]
		}
	}
}