{
	"on-start": {
		"action": "say-text",
		"text": "Starting PiControl"
	},
	"on-exit": {
		"action": "say-text",
		"text": "Stopping PiControl"
	},
	"on-activation": {
		"action": "say-text",
		"text": "Yes, sir"
	},
	"on-timeout": {
		"action": "play-sound",
		"soundfile": "sounds/timeout.wav"
	},
	"on-reload": {
		"action": "none"
	},
	"timeout": 30,
	"on-wrong-command": {
		"action": "play-sound",
		"soundfile": "sounds/error.wav"
	},
	"activation-commands": [
		"KEVIN"
	],
	"tts": {
		"class-name": "de.piegames.picontrol.tts.FreeSpeechEngine"
	},
	"stt": {
		"class-name": "de.piegames.picontrol.stt.SphinxRecognizer"
	},
	"active-modules": [
		"pi-control",
		"shell",
		"application-control"
	],
	"modules": {
		"shell": {
			"class-name": "de.piegames.picontrol.module.ShellModule",
			"commands": {
				"TEST": {
					"action": "run-command",
					"command": "echo Hello world",
					"stdout-to-tts": "true"
				}
			}
		},
		"pi-control": {
			"class-name": "de.piegames.picontrol.module.ShellModule",
			"commands": {
				"CHECK INTERNET": {
					"action": "run-command",
					"command": "bash scripts/check_internet.sh",
					"stdout-to-tts": "true"
				},
				"WHERE ARE YOU": {
					"action": "run-command",
					"say-before-executing": "You are at",
					"command": "bash scripts/tell_ip.sh",
					"stdout-to-tts": "true"
				},
				"YOU IP": {
					"action": "run-command",
					"say-before-executing": "Your I_P's are:",
					"command": "bash scripts/tell_ip.sh",
					"stdout-to-tts": "true"
				},
				"SHUT DOWN": {
					"action": "run-command",
					"say-before-executing": "Goodbye",
					"command": "shutdown now",
					"await-termination": "true"
				},
				"RESTART": {
					"action": "run-command",
					"say-before-executing": "See you later",
					"command": "reboot",
					"await-termination": "true"
				}
			}
		},
		"application-control": {
			"class-name": "de.piegames.picontrol.module.ApplicationModule",
			"exit-commands": [
				"EXIT"
			],
			"reload-commands": [
				"RELOAD"
			]
		}
	},
	"corpus-history-size": 10
}